<Window x:Class="Danidrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Danidrum"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type=local:MainWindowViewModel}"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"        
        xmlns:services="clr-namespace:Danidrum.Services" 
        xmlns:userControls="clr-namespace:Danidrum.UserControls"
        Title="MainWindow" Height="800" Width="1800"
        Background="{StaticResource MaterialDesignPaper}"
        materialDesign:ThemeAssist.Theme="Dark"
        TextElement.Foreground="{StaticResource MaterialDesignBody}">


    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </b:EventTrigger>

        <b:KeyTrigger Key="Space" FiredOn="KeyUp" ActiveOnFocus="True">
            <b:InvokeCommandAction Command="{Binding TogglePlayPauseCommand}" />
        </b:KeyTrigger>
    </b:Interaction.Triggers>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <ListBox Grid.Column="0"
                 ItemsSource="{Binding Chunks}"
                 SelectedItem="{Binding SelectedChunk}"
                 HorizontalContentAlignment="Stretch"
                 Style="{StaticResource MaterialDesignNavigationListBox}">

            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type services:ChunkContext}">
                    <Grid Margin="5, 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="MusicNote"
                                     Grid.Column="0"
                                     Margin="0,0,15,0"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource MaterialDesign.Brush.OnSurfaceVariant}"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="Bold"
                                       TextTrimming="CharacterEllipsis">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.OnSurface}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLikelyDrumTrack}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Secondary.Light}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ChannelId, StringFormat={}CH{0}}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                                           FontWeight="Bold"
                                           TextTrimming="CharacterEllipsis"/>

                                <TextBlock Text="-" Margin="5 0"/>

                                <TextBlock Text="{Binding InstrumentName}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesign.Brush.OnSurfaceVariant}"
                                           TextTrimming="CharacterEllipsis"/>


                            </StackPanel>

                        </StackPanel>

                        <ToggleButton Grid.Column="2"
                                      Style="{StaticResource MaterialDesignActionToggleButton}"
                                      IsChecked="{Binding IsMuted}"
                                      Command="{Binding DataContext.MuteStateChangedCommand, RelativeSource={RelativeSource AncestorType=local:MainWindow}}"
                                      CommandParameter="{Binding}"
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center">

                            <materialDesign:PackIcon Kind="VolumeHigh" />

                            <materialDesign:ToggleButtonAssist.OnContent>
                                <materialDesign:PackIcon Kind="VolumeOff" />
                            </materialDesign:ToggleButtonAssist.OnContent>

                        </ToggleButton>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <userControls:TimeLineUserControl CurrentTimeMs="{Binding CurrentTimeMs, Mode=TwoWay}" 
                                              Height="100"
                                              VisibleAreaMs="{Binding VisibleAreaMs, Mode=OneWay}"
                                              IsUserSeeking="{Binding IsUserSeeking, Mode=TwoWay}"
                                              IsPlaying="{Binding IsPlaying, Mode=TwoWay}"
                                              Song="{Binding Song}" />

            <userControls:NoteHighwayControl Grid.Row="1"
                                             VisibleAreaMs="{Binding VisibleAreaMs, Mode=OneWayToSource}"
                                             PixelPerMs="{Binding PixelPerMs}"
                                             Chunk="{Binding SelectedChunk}"
                                             DataContext="{Binding}"
                                             VisualLatencyInMs="{Binding VisualLatencyInMs}"
                                             CurrentTimeMs="{Binding CurrentTimeMs}"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="10">

                    <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                  IsChecked="{Binding IsPlaying}"
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center">

                        <materialDesign:PackIcon Kind="Play" />

                        <materialDesign:ToggleButtonAssist.OnContent>
                            <materialDesign:PackIcon Kind="Pause" />
                        </materialDesign:ToggleButtonAssist.OnContent>

                    </ToggleButton>

                    <TextBlock VerticalAlignment="Center" Text="Reduce" Margin="20 0 0 0"/>
                    <ToggleButton IsChecked="{Binding IsReduced}" Margin="20 0 0 0"/>

                    <materialDesign:PackIcon Kind="microphone" Width="22" Height="22" VerticalAlignment="Center" Margin="40 0 0 0" />
                    <ComboBox ItemsSource="{Binding InputDevices}" SelectedItem="{Binding SelectedInputDevice}" 
                              Margin="10 0 0 0"/>


                    <materialDesign:PackIcon Kind="VolumeHigh" Width="22" Height="22" VerticalAlignment="Center" Margin="40 0 0 0" />
                    <ComboBox ItemsSource="{Binding OutputDevices}" SelectedItem="{Binding SelectedOutputDevice}"
                              Margin="10 0 0 0"/>

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">


                    <materialDesign:Chip Background="{DynamicResource MaterialDesign.Brush.Primary}" Margin="0 0 30 0">
                        <materialDesign:PackIcon Kind="MagnifyMinus" Width="22" Height="22" VerticalAlignment="Center" />
                    </materialDesign:Chip>


                    <materialDesign:PackIcon Kind="MagnifyMinusOutline" Width="22" Height="22" VerticalAlignment="Center" />
                    <Slider Width="200" Value="{Binding PixelPerMs}" Minimum="0.05" Maximum="1" VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                    <materialDesign:PackIcon Kind="MagnifyPlusOutline" Width="22" Height="22" VerticalAlignment="Center" />


                    <materialDesign:Chip Background="{DynamicResource MaterialDesign.Brush.Primary}" Margin="0 0 30 0">
                        <materialDesign:PackIcon Kind="MagnifyPlus" Width="22" Height="22" VerticalAlignment="Center" />
                    </materialDesign:Chip>


                    <Slider Width="200" Value="{Binding VisualLatencyInMs}" Minimum="0" Maximum="500" VerticalAlignment="Center"/>
                    <materialDesign:Chip Background="{DynamicResource MaterialDesign.Brush.Primary}" Margin="0 0 30 0">
                        <materialDesign:PackIcon Kind="TimerCogOutline" Width="22" Height="22" VerticalAlignment="Center" />
                    </materialDesign:Chip>

                    <Slider Value="{Binding Speed}" Minimum="0.01" Maximum="2" Width="200" VerticalAlignment="Center"/>
                    <materialDesign:Chip Background="{DynamicResource MaterialDesign.Brush.Primary}" Margin="0 0 30 0">
                        <TextBlock Text="{Binding Bpm, StringFormat={}{0:F0} BPM}"/>
                    </materialDesign:Chip>
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>

