<Window x:Class="Danidrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Danidrum"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type=local:MainWindowViewModel}"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:services="clr-namespace:Danidrum.Services" 
        xmlns:userControls="clr-namespace:Danidrum.UserControls"
        Title="MainWindow" Height="800" Width="1800"
        Background="{StaticResource MaterialDesignPaper}"
        TextElement.Foreground="{StaticResource MaterialDesignBody}">

    <Window.Resources>
        <CollectionViewSource x:Key="TrackGroupsView" Source="{Binding Chunks}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="ChannelId" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </b:EventTrigger>

        <b:KeyTrigger Key="Space" FiredOn="KeyUp" ActiveOnFocus="True">
            <b:InvokeCommandAction Command="{Binding TogglePlayPauseCommand}" />
        </b:KeyTrigger>
    </b:Interaction.Triggers>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <ListBox Grid.Column="0"
                 ItemsSource="{Binding Source={StaticResource TrackGroupsView}}"
                 SelectedItem="{Binding SelectedChunk}"
                 HorizontalContentAlignment="Stretch"
                 Style="{StaticResource MaterialDesignNavigationListBox}">

            <ListBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name, StringFormat='Channel {0}'}"
                                       FontWeight="Bold"
                                       Margin="5"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>

                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True" Background="{DynamicResource MaterialDesign.Brush.SurfaceVariant}">
                                            <Expander.Header>
                                                <ContentPresenter />
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListBox.GroupStyle>

            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type services:ChunkContext}">
                    <Grid Margin="5, 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="MusicNote"
                                     Grid.Column="0"
                                     Margin="0,0,15,0"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource MaterialDesign.Brush.OnSurfaceVariant}"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="Bold"
                                       TextTrimming="CharacterEllipsis">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.OnSurface}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLikelyDrumTrack}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Text="{Binding InstrumentName}"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnSurfaceVariant}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="2"
                                      Style="{StaticResource MaterialDesignActionToggleButton}"
                                      IsChecked="{Binding IsMuted}"
                                      Command="{Binding DataContext.MuteStateChangedCommand, RelativeSource={RelativeSource AncestorType=local:MainWindow}}"
                                      CommandParameter="{Binding}"
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center">

                            <materialDesign:PackIcon Kind="VolumeHigh" />

                            <materialDesign:ToggleButtonAssist.OnContent>
                                <materialDesign:PackIcon Kind="VolumeOff" />
                            </materialDesign:ToggleButtonAssist.OnContent>

                        </ToggleButton>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Slider x:Name="PositionSlider"
                        Grid.Column="0"
                        Minimum="0"
                        Ticks="{Binding MeasureStartTimesInMs}"
                        IsSnapToTickEnabled="True"
                        TickPlacement="BottomRight"
                        Maximum="{Binding Song.LengthMs}"
                        Value="{Binding CurrentSongPositionMs}"
                        Style="{StaticResource MaterialDesign3.MaterialDesignSlider}">

                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="PreviewMouseLeftButtonDown">
                            <b:InvokeCommandAction Command="{Binding StartSeekingCommand}" />
                        </b:EventTrigger>

                        <b:EventTrigger EventName="PreviewMouseLeftButtonUp">
                            <b:InvokeCommandAction Command="{Binding StopSeekingCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Slider>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Command="{Binding TogglePlayPauseCommand}" ToolTip="Play/Pause (Space)">
                        <materialDesign:PackIcon Width="24" Height="24"
                                                 Kind="{Binding IsPlaying, Converter={StaticResource BoolToPlayPauseIconConverter}}"/>
                    </Button>
                    
                    <Slider Value="{Binding Speed}" Minimum="0.01" Maximum="2" Width="200"/>
                    <TextBlock Text="{Binding Bpm, StringFormat={}{0:F0} BPM}"/>

                </StackPanel>

            </Grid>

            <userControls:NoteHighwayControl Grid.Row="1"
                                             PixelPerMs="{Binding PixelPerMs}"
                                             Chunk="{Binding SelectedChunk}"
                                             DataContext="{Binding}"
                                             VisualLatencyInMs="{Binding VisualLatencyInMs}"
                                             CurrentTimeMs="{Binding CurrentSongPositionMs}"/>

            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Width="200" Value="{Binding PixelPerMs}" Minimum="0.05" Maximum="1"/>
                    <Slider Width="200" Value="{Binding VisualLatencyInMs}" Minimum="0" Maximum="500"/>
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>

