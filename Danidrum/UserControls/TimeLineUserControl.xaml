<UserControl x:Class="Danidrum.UserControls.TimeLineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Danidrum.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MouseMove="TimeLineUserControl_OnMouseMove"
             MouseLeftButtonDown="OnSeekStarted"
             MouseLeave="OnSeekCompleted"
             SizeChanged="OnSizeChanged"
             MouseLeftButtonUp="OnSeekCompleted">
    <Border BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" BorderThickness="1" 
            Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}">
        <Border VerticalAlignment="Center">
            <Grid x:Name="TimeLineContainer">
                
                <local:MeasuresControl Song="{Binding Song}" 
                                       MeasureBrush="{DynamicResource MaterialDesign.Brush.Primary}" MeasureThickness="0.5"/>

                <ItemsControl ItemsSource="{Binding SelectedChunk.Lanes}" Margin="0 10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:NoteLaneControl Height="10" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border BorderThickness="0 0 1 0" BorderBrush="{DynamicResource MaterialDesign.Brush.Secondary.Light}" 
                        Height="{Binding ActualHeight, ElementName=TimeLineContainer}"
                        IsHitTestVisible="False"
                        Background="{DynamicResource MaterialDesign.Brush.Secondary.Light}" Width="{Binding RangeStart, RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}}" 
                        Opacity="0.5"
                        HorizontalAlignment="Left"/>


                <Border BorderThickness="0 0 1 0" BorderBrush="{DynamicResource MaterialDesign.Brush.Secondary.Light}" 
                        Height="{Binding ActualHeight, ElementName=TimeLineContainer}"
                        IsHitTestVisible="False"
                        Background="{DynamicResource MaterialDesign.Brush.Secondary.Light}" Width="{Binding RangeEnd, RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}}" 
                        Opacity="0.5"
                        HorizontalAlignment="Right"/>

                <Canvas x:Name="PositionCanvas">

                    <Thumb x:Name="StartRangeThumb"
                           HorizontalAlignment="Left"
                           Width="10" 
                           Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                           DragDelta="OnRangeDragDelta"
                           Height="{Binding Path=ActualHeight, ElementName=TimeLineContainer}"
                           Margin="-5 0 0 0"
                           Canvas.Left="{Binding RangeStart, RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}, Mode=TwoWay}"/>


                    <Thumb x:Name="EndRangeThumb"
                           HorizontalAlignment="Left"
                           Width="10" 
                           Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                           DragDelta="OnRangeDragDelta"
                           Height="{Binding Path=ActualHeight, ElementName=TimeLineContainer}"
                           Margin="-5 0 0 0"
                           Canvas.Right="{Binding RangeEnd, RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}, Mode=TwoWay}"/>

                   

                </Canvas>


                <Line Stroke="Red" 
                      X1="{Binding RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}, Path=CurrentPosition}"
                      X2="{Binding RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}, Path=CurrentPosition}"
                      Y1="0"
                      Y2="{Binding ElementName=TimeLineContainer, Path=ActualHeight }"/>

                <Border BorderThickness="0 0 1 0" BorderBrush="{DynamicResource MaterialDesign.Brush.Secondary.Light}" 
                        IsHitTestVisible="False"
                        Background="Transparent" Width="{Binding LeftMaskWidth, RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}}" HorizontalAlignment="Left">
                    <Grid Opacity="0.5" Background="Black" />
                </Border>

                <Border BorderThickness="1 0 0 0" BorderBrush="{DynamicResource MaterialDesign.Brush.Secondary.Light}" 
                        IsHitTestVisible="False"
                        Background="Transparent" Width="{Binding RightMaskWidth, RelativeSource={RelativeSource AncestorType=local:TimeLineUserControl}}" HorizontalAlignment="Right">
                    <Grid Opacity="0.5" Background="Black" />
                </Border>

            </Grid>
        </Border>
        
    </Border>
</UserControl>
